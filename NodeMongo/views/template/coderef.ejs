<!-- ajax layout which only needs content area -->

<div class="row">
	<div class="col-xs-12">
		<!-- PAGE CONTENT BEGINS -->
		
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<!-- #section:pages/invoice -->
				<div class="widget-box transparent">
					<div class="widget-header widget-header-large">
						<h3 class="widget-title grey lighter">
							<i class="ace-icon fa fa-leaf green"></i>
							Manage Notes
						</h3>

						<!-- #section:pages/invoice.info -->
						<div class="widget-toolbar no-border invoice-info">							
							<a ng-click="saveNotes()" class="btn btn-success">
								<i class="ace-icon fa fa-save"></i>
								Save
							</a>
						</div>

						<div class="widget-toolbar hidden-480">
							<a href="#">
								<i class="ace-icon fa"></i>
							</a>
						</div>

						<!-- /section:pages/invoice.info -->
					</div>
					<div class="widget-body">
						<div class="widget-main padding-24">
							<div class="row" id="coderef">
									<div class="col-xs-12">
										<button class="btn btn-danger btn-sm" ng-click="addNote(new)">
											<i class="ace-icon fa fa-plus"></i>
											Add Note
										</button>
											<table id="coderefTable" datatable="ng" class="table table-striped table-bordered table-hover">
											<!--
											<table id="coderefTable" options="options" notesref-table   aa-data="notes" class="table table-striped table-bordered table-hover">
											-->
												<thead>
													<tr>														
														<th>Note Title</th>
														<th>Tags</th>
														<th>Description</th>	
														<th>Actions</th>															
													</tr>
												</thead>
											
												<tbody>
												<tr ng-repeat="note in notes track by $index">
														<td>
															<a href="{{note.url}}" target="_blank" ng-if="note.url">{{note.title}}</a>
															<p ng-if="!note.url">{{note.title}} </p>
														</td>
														<td >
															<div  ng-repeat="tag in note.tags">
																<span  class="label label-sm label-error">{{tag.text}}</span>
															</div>
														</td>
														<td>
															
																<p class="lighter line-height-125">
																	{{note.description}}
																</p>
															
														</td>
														<td>
															<div class="action-buttons">
																<a class="blue" href="" ng-click="viewNote(note.noteid)">
																	<i class="ace-icon fa fa-search-plus bigger-130"></i>
																</a>

																<a class="green" href="" ng-click="editNote(note.noteid)">
																	<i class="ace-icon fa fa-pencil bigger-130"></i>
																</a>

																<a class="red" href="" ng-click="deleteNote(note.noteid)">
																	<i class="ace-icon fa fa-trash-o bigger-130"></i>
																</a>
															</div>
														</td>	
												</tr>
												</tbody>												
											 
											 </table>	
							</div>
						</div>
					</div> <!--  widget body ends -->
					
				</div><!-- widget-box transparent -->
			</div> <!--col-10 -->
		</div> <!-- row -->				

		<!-- PAGE CONTENT ENDS -->
	</div><!-- /.col -->
</div><!-- /.row -->

