								<li class="">
									<a data-toggle="tab" data-target="#training">Training</a>
								</li>
							</ul>
						</div>

						<!-- /section:custom/widget-box.tabbed -->
					</div>

					<div class="widget-body">
						<div class="widget-main padding-6">
							<div class="tab-content">
								

								<div id="certification" class="tab-pane">	
