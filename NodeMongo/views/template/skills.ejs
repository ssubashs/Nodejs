<!-- ajax layout which only needs content area -->

<div class="row">
	<div class="col-xs-12">
		<!-- PAGE CONTENT BEGINS -->
	
			<div class="col-sm-10 widget-container-col ui-sortable" >
				<div class="widget-box ui-sortable-handle" >
					<div class="widget-header widget-header-small">						
						<button class="btn btn-info btn-bold" ng-click="saveSkills()">
							<i class="ace-icon fa fa-floppy-o bigger-120 blue"></i>
							Save updates
						</button>

						<!-- #section:custom/widget-box.tabbed -->
						<div class="widget-toolbar no-border">
							<ul class="nav nav-tabs" id="myTab">
								<li class="">
									<a id="defaulttab" data-toggle="tab" data-target="#technology">Technology</a>
								</li>

								<li class="">
									<a data-toggle="tab" data-target="#certification">Certification</a>
